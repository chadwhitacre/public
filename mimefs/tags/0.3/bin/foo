#!/usr/bin/env python

import os
import stat
import subprocess
import time

c = 'make install clean'
mtime = os.stat('mimefsd.py')[stat.ST_MTIME]
while 1:
    newtime = os.stat('mimefsd.py')[stat.ST_MTIME]
    if mtime != newtime:
        p = subprocess.Popen(c, shell=True)
        sts = os.waitpid(p.pid, 0)
        mtime = newtime
        #print "%s" % time.strftime('%I:%M.%S%p').replace(' 0', ' ')
    time.sleep(0.5)

